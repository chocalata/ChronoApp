---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="m-0 h-full w-full" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			id="favicon"
			rel="icon"
			type="image/svg+xml"
			href="/img/stop.svg"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 grid min-h-dvh min-w-full grid-rows-[auto_1fr_auto]">
		<img
			id="image"
			class="pointer-events-none absolute inset-0 -z-10 m-auto h-full opacity-10"
			src="/img/stop.svg"
			alt="Stop Icon"
		/>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #2e323e;
		color-scheme: dark light;
	}
</style>
